<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresarVehiculos">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/stroke_card">

            <EditText
                android:id="@+id/et_i_Placa"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_margin="25dp"
                android:ems="7"
                android:hint="@string/str_placaEjemplo"
                android:inputType="textCapCharacters"
                android:fontFamily="@font/open_sans"
                android:maxLength="7"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="54sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"
                android:onClick="btnBack"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opcionesVechiculos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardPlaca"
        android:layout_margin="5dp"
        />


</RelativeLayout >