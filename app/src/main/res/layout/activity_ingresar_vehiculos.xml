<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresarVehiculos">

    <EditText
        android:id="@+id/et_i_Placa"
        android:layout_width="228dp"
        android:layout_height="117dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_textinputlayout"
        android:ems="7"
        android:hint="@string/str_placaEjemplo"
        android:inputType="textCapCharacters"
        android:maxLength="7"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="54sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:onClick="Nuevo_Ingreso"
        android:text="INGRESAR VEHICULO"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_i_Placa" />

    <Button
        android:id="@+id/button3"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:onClick="Sacar"
        android:text="SACAR VEHICULO"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_i_Placa" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_i_Placa">

        <RadioButton
            android:id="@+id/rbAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_Automovil" />

        <RadioButton
            android:id="@+id/rbMoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_Motocicleta" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>