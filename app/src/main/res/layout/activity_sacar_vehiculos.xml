<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SacarVehiculos">

    <EditText
        android:id="@+id/et_s_Placa"
        android:layout_width="228dp"
        android:layout_height="117dp"
        android:layout_marginTop="32dp"
        android:ems="7"
        android:hint="@string/str_placaEjemplo"
        android:inputType="textPersonName"
        android:maxLength="7"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="54sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:background="@drawable/custom_textinputlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/str_FACTURAR"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_s_Placa" />

</android.support.constraint.ConstraintLayout>